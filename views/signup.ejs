<form action="/signup" method="POST" role="form" class='search-top'>
	<div class="form-group login-container">
		<h1 class='center'>Sign Up</h1>
		<% if(error){ %>
		<p class='error'>PASSWORDS DID NOT MATCH</p>
		<% } %>
		<input type="text" class="form-control" id="" placeholder="Name" name='name' required>
		<input type="email" class="form-control" id="" placeholder="E-mail" name='email' required>
		<input type="password" class="form-control" id="" placeholder="Password" name='password' required>
		<input type="password" class="form-control" id="" placeholder="Password" name='password2' required>
		<button type="submit" class="btn btn-primary center">SIGN UP</button>
	</div>

	


</form>